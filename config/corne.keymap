#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define LOWER 1
#define SYM 2
#define QWERTY 3
#define NAV 4

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -------------------------------   --------------------------------
// |  Q  |  W  |  F  |  P  |  B  |   |  J  |  L   |  U  |  Y  |  ;  |
// |  A  |  R  |  S  |  T  |  G  |   |  M  |  N   |  E  |  I  |  O  |
// |  Z  |  X  |  C  |  D  |  V  |   |  K  |  H   |  ,  |  .  |  /  |
//             |LShft| BSPC|CTRLESC| |ALTENT| NAV SPC  | SYM |
// Note that we have to set the outer cols &none because this is only a 3x5 keyboard
                        bindings = <
   &none &kp Q &kp W &kp F &kp P &kp B   &kp J &kp L  &kp U     &kp Y   &kp SEMI &none
   &none &kp A &kp R &kp S &kp T &kp G   &kp M &kp N  &kp E     &kp I   &kp O    &none
   &none &kp Z &kp X &kp C &kp D &kp V   &kp K &kp H  &kp COMMA &kp DOT &kp FSLH &none
                  &kp LSHIFT &kp BSPC &mt LCTL ESC   &mt LALT RET &lt NAV SPACE &mo SYM
                        >;
                };
                lower_layer {
// -------------------------------   -------------------------------
// |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  |
// | BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |
// |BTCLR|BTNXT|BTPRV|     |     |   |     |     |     |     |     |
//             |LShft| Bspc|CTRLESC||ALTENT| SPC|  |
// Note that we have to set the outer cols &none because this is only a 3x5 keyboard
                        bindings = <
   &none &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &none
   &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &none &bt BT_CLR   &bt BT_NXT   &bt BT_PRV   &trans       &trans         &trans   &trans   &trans &trans    &trans &trans
                  &kp LSHIFT &kp BSPC &mt LCTL ESC   &mt LALT RET &trans &trans
                        >;
                };

                sym_layer {
// -------------------------------   -------------------------------
// |  !  |  @  |  |  |  {  |  }  |   |  _  |  7  |  8  |  9  |  *  |
// | Tab |  $  | '"  |  (  |  )  |   |  -  |  4  |  5  |  6  | \|  |
// |  %  |  ^  | `~  |  [  |  ]  |   |  0  |  1  |  2  |  3  | =+  |
//             | GUI | BSPC|CTRLESC| |ALTENT| NAV SPC  | SYM |
// Note that we have to set the outer cols &none because this is only a 3x5 keyboard
                        bindings = <
   &none &kp EXCL &kp AT &kp PIPE &kp LBRC &kp RBRC   &kp UNDER &kp N7  &kp N8 &kp N9 &kp KP_ASTERISK &none
   &none &kp TAB &kp DOLLAR &kp SINGLE_QUOTE &kp KP_LPAR  &kp KP_RPAR      &kp MINUS &kp N4 &kp N5        &kp N6 &kp BSLH &none
   &none &kp PERCENT &kp CARET &kp TILDE &kp LBKT &kp RBKT      &kp N0 &kp N1  &kp N2 &kp N3 &kp EQUAL &none
                  &kp LSHIFT &kp BSPC &mt LCTL ESC   &mt LALT RET &lt NAV SPACE &mo SYM
                        >;
                };


                qwerty_layer {
// -------------------------------   --------------------------------
// |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  |
// |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |
// |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  |
//             | GUI | BSPC|CTRLESC| |ALTENT| NAV SPC  | SYM |
// Note that we have to set the outer cols &none because this is only a 3x5 keyboard
                        bindings = <
   &none &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &none
   &none &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &none
   &none &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &none
                  &kp LSHIFT &kp BSPC &mt LCTL ESC   &mt LALT RET &lt NAV SPACE &mo SYM
                        >;
                };


                nav_layer {
// -------------------------------   -------------------------------
// | F9  | F10 | F11 | F12 |     |   | PGUP| HOME|  UP | END |VOLUP|
// | F5  | F6  | F7  | F8  |     |   | PGDN| LEFT| DOWN| RGHT|VOLDN|
// | F1  | F2  | F3  | F4  |     |   |PAUSE|MPREV|MPLAY|MNEXT| MUTE|
//             | GUI | BSPC|CTRLESC| |ALTENT|NAV SPC|     |
// Note that we have to set the outer cols &none because this is only a 3x5 keyboard
                        bindings = <
   &none &kp F9 &kp F10 &kp F11 &kp F12 &none    &kp PG_UP &kp N7   &kp N8 &kp N9    &kp N0 &none
   &none &kp F5 &kp F6 &kp F7 &kp F8 &none     &kp PG_DN &kp DOWN &kp UP &kp RIGHT &trans &trans
   &none &kp F1 &kp F2 &kp F3 &fp F4 &trans         &trans   &trans   &trans &trans    &trans &trans
                  &kp LSHIFT &kp BSPC &mt LCTL ESC   &mt LALT RET &trans &mo SYM
                        >;
                };
        };
        conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <SYM NAV>;
            then-layer = <LOWER>;
        };
    };
};
